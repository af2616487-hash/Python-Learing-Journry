n = int(input())

grid = [[i * n + j + 1 for j in range(n)] for i in range(n)]

total_sum = 0

for d in range(2 * n - 1):
    elements = []
    for i in range(n):
        j = d - i
        if 0 <= j < n:
            elements.append(grid[i][j])
    if d % 2 == 0:
        elements.reverse()
    for val in elements:
        total_sum += val

print(total_sum)
